# =============================================================================
# Student Study Planner - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# Google Gemini API Key (required)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith Configuration (optional - for tracing & prompt versioning)
# Sign up at: https://smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=student-study-planner
LANGCHAIN_TRACING_V2=true

# Firebase Configuration (optional - for data persistence)
# Option 1: Path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
# Option 2: Service account JSON as base64 encoded string
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------

# Django settings
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------

# API URL for the frontend to connect to
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# -----------------------------------------------------------------------------
# Docker/Production Configuration
# -----------------------------------------------------------------------------

# Redis (for caching/rate limiting in production)
REDIS_URL=redis://localhost:6379/0

# Optional: API rate limiting
RATE_LIMIT_PER_MINUTE=20
